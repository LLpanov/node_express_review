{
  "name": "express-typeorm",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start:dev": "nodemon app.ts",
    "build": "rimraf dist tsc --watch",
    "start": "rimraf dist && tsc-watch --onSuccess \"npm run watch:server\"",
    "watch:server": "nodemon './src/app.ts' --watch './src'",
    "lint": "eslint --cache --ext .js,.ts src",
    "lint-fix": "npm run lint -- --fix",
    "typeorm": "node -r ts-node/register ./node_modules/typeorm/cli.js",
    "migration:generate": "typeorm migration:create -n ",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "eslint": "8.22.0",
    "express": "^4.17.3",
    "joi": "^17.6.3",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.8.0",
    "nodemon": "^2.0.15",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "ts-node": "^10.5.0",
    "tsc-watch": "^4.6.0",
    "typeorm": "^0.2.43",
    "typescript": "^4.8.3",
    "email-templates": "^10.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.3",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^17.0.19",
    "@types/nodemailer": "^6.4.6",
    "@types/email-templates": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.5",
    "eslint-plugin-promise": "^6.0.1"
  }
}
